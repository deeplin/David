<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.david.incubator.ui.user.usermodel.UserModelLayout" />
    </data>

    <!--584*480-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--第一行-->

        <com.david.incubator.ui.common.TitleView
            android:id="@+id/title"
            android:layout_width="464dp"
            android:layout_height="@dimen/y60"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--第一行-->

        <com.david.incubator.ui.common.KeyValueView
            android:id="@+id/userModel1"
            android:layout_width="260dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/userModel3"
            app:layout_constraintEnd_toStartOf="@+id/userModel2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <com.david.incubator.ui.common.KeyValueView
            android:id="@+id/userModel2"
            android:layout_width="260dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/userModel1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/userModel1"
            app:layout_constraintTop_toTopOf="@id/userModel1" />

        <!--第二行-->

        <com.david.incubator.ui.common.KeyValueView
            android:id="@+id/userModel3"
            android:layout_width="260dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/userModel5"
            app:layout_constraintEnd_toStartOf="@+id/userModel4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userModel1" />

        <com.david.incubator.ui.common.KeyValueView
            android:id="@+id/userModel4"
            android:layout_width="260dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/userModel3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/userModel3"
            app:layout_constraintTop_toTopOf="@id/userModel3" />

        <!--第三行-->

        <com.david.incubator.ui.common.KeyValueView
            android:id="@+id/userModel5"
            android:layout_width="260dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/userModel7"
            app:layout_constraintEnd_toStartOf="@+id/userModel6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userModel3" />

        <com.david.incubator.ui.common.KeyValueView
            android:id="@+id/userModel6"
            android:layout_width="260dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/userModel5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/userModel5"
            app:layout_constraintTop_toTopOf="@id/userModel5" />

        <!--第四行-->

        <com.david.incubator.ui.common.KeyValueView
            android:id="@+id/userModel7"
            android:layout_width="260dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintEnd_toStartOf="@+id/userModel8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userModel5" />

        <com.david.incubator.ui.common.KeyValueView
            android:id="@+id/userModel8"
            android:layout_width="260dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/userModel7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/userModel7"
            app:layout_constraintTop_toTopOf="@id/userModel7" />

        <ImageView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y40"
            android:src="@mipmap/horizontal"
            app:layout_constraintBottom_toTopOf="@id/buttonControl"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userModel7" />

        <com.david.incubator.ui.common.ButtonControlView
            android:id="@+id/buttonControl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>